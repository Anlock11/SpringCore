<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person" class="com.example.bai8.Person" >
        <property name="name" value="Tuan Anh"></property>
        <property name="age" value="15"></property>
        <property name="address" ref="address"></property>

    </bean>
    <bean id="address" class="com.example.bai8.Address">
        <property name="coutry" value="Viet Nam"></property>
        <property name="provice" value="Quang Nam"></property>
        <property name="district" value="Hoi An"></property>

    </bean>
</beans>